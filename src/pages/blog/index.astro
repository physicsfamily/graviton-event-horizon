---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const posts = await getCollection('blog', ({ data }) => !data.draft);
const sortedPosts = posts.sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf());
---

<Layout title="Blog" description="Latest news, tutorials, and updates from the Entropy Zero team.">
  <section class="pt-32 pb-24">
    <div class="mx-auto max-w-7xl px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary">
          <span class="text-neon-blue">Blog</span>
        </h1>
        <p class="mt-4 text-lg text-text-secondary max-w-2xl mx-auto">
          News, tutorials, and insights from the Entropy Zero team.
        </p>
      </div>

      <!-- Posts Grid -->
      {sortedPosts.length > 0 ? (
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          {sortedPosts.map((post) => (
            <article class="group rounded-xl border border-void-light bg-void-gray/50 overflow-hidden hover:border-neon-blue/50 transition-all">
              {post.data.heroImage && (
                <div class="aspect-video bg-void-dark overflow-hidden">
                  <img 
                    src={post.data.heroImage} 
                    alt={post.data.title}
                    class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  />
                </div>
              )}
              <div class="p-6">
                <div class="flex items-center gap-2 text-xs text-text-muted mb-3">
                  <time datetime={post.data.publishDate.toISOString()}>
                    {post.data.publishDate.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
                  </time>
                  <span>‚Ä¢</span>
                  <span>{post.data.author}</span>
                </div>
                <h2 class="text-xl font-bold text-text-primary group-hover:text-neon-blue transition-colors mb-2">
                  <a href={`/blog/${post.slug}`} class="hover:underline">
                    {post.data.title}
                  </a>
                </h2>
                <p class="text-sm text-text-secondary line-clamp-2">
                  {post.data.description}
                </p>
                {post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2 mt-4">
                    {post.data.tags.slice(0, 3).map((tag) => (
                      <span class="text-xs px-2 py-1 rounded-full bg-void-light text-text-muted">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </article>
          ))}
        </div>
      ) : (
        <div class="text-center py-16">
          <div class="text-4xl mb-4">üìù</div>
          <h2 class="text-xl font-semibold text-text-primary mb-2">No posts yet</h2>
          <p class="text-text-secondary">Check back soon for updates!</p>
        </div>
      )}
    </div>
  </section>
</Layout>
