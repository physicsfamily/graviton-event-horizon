---
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

const docs = await getCollection('docs');
const sortedDocs = docs.sort((a, b) => a.data.order - b.data.order);

const sections = {
  'getting-started': { title: 'Getting Started', icon: 'ðŸš€' },
  'core-concepts': { title: 'Core Concepts', icon: 'ðŸ§ ' },
  'api-reference': { title: 'API Reference', icon: 'ðŸ“š' },
  'advanced': { title: 'Advanced Topics', icon: 'âš¡' },
};
---

<Layout title="Documentation" description="Learn how to use Entropy Zero with our comprehensive documentation.">
  <section class="pt-32 pb-24">
    <div class="mx-auto max-w-7xl px-6">
      <!-- Header -->
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-text-primary">
          <span class="text-neon-blue">Documentation</span>
        </h1>
        <p class="mt-4 text-lg text-text-secondary max-w-2xl mx-auto">
          Everything you need to build powerful physics simulations with Entropy Zero.
        </p>
      </div>

      <!-- Quick Start -->
      <div class="mb-16 p-8 rounded-2xl border border-neon-blue/30 bg-gradient-to-r from-neon-blue/10 to-transparent">
        <div class="flex flex-col md:flex-row items-start md:items-center gap-6">
          <div class="flex-1">
            <h2 class="text-2xl font-bold text-text-primary">Quick Start</h2>
            <p class="mt-2 text-text-secondary">
              Get up and running with Entropy Zero in under 5 minutes.
            </p>
          </div>
          <a 
            href="/docs/getting-started"
            class="inline-flex items-center gap-2 rounded-lg bg-neon-blue px-6 py-3 text-sm font-semibold text-void-black hover:shadow-lg hover:shadow-neon-blue/25 transition-all"
          >
            Start Tutorial
            <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6" />
            </svg>
          </a>
        </div>
      </div>

      <!-- Documentation Grid -->
      <div class="grid md:grid-cols-2 gap-8">
        {Object.entries(sections).map(([key, section]) => {
          const sectionDocs = sortedDocs.filter(doc => doc.data.section === key);
          return (
            <div class="rounded-xl border border-void-light bg-void-gray/50 p-6">
              <div class="flex items-center gap-3 mb-4">
                <span class="text-2xl">{section.icon}</span>
                <h2 class="text-xl font-bold text-text-primary">{section.title}</h2>
              </div>
              <ul class="space-y-2">
                {sectionDocs.length > 0 ? (
                  sectionDocs.map(doc => (
                    <li>
                      <a 
                        href={`/docs/${doc.slug}`}
                        class="flex items-center gap-2 text-text-secondary hover:text-neon-blue transition-colors py-1"
                      >
                        <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                        </svg>
                        {doc.data.title}
                      </a>
                    </li>
                  ))
                ) : (
                  <li class="text-text-muted text-sm italic">Coming soon...</li>
                )}
              </ul>
            </div>
          );
        })}
      </div>

      <!-- Resources -->
      <div class="mt-16 grid md:grid-cols-3 gap-6">
        <a href="https://github.com" class="group rounded-xl border border-void-light bg-void-gray/50 p-6 hover:border-neon-blue/50 transition-all">
          <div class="flex items-center gap-3 mb-3">
            <svg class="w-6 h-6 text-text-muted group-hover:text-neon-blue transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
            </svg>
            <h3 class="font-semibold text-text-primary">GitHub</h3>
          </div>
          <p class="text-sm text-text-secondary">Browse source code, report issues, and contribute.</p>
        </a>
        
        <a href="https://discord.com" class="group rounded-xl border border-void-light bg-void-gray/50 p-6 hover:border-neon-blue/50 transition-all">
          <div class="flex items-center gap-3 mb-3">
            <svg class="w-6 h-6 text-text-muted group-hover:text-neon-blue transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M20.317 4.3698a19.7913 19.7913 0 00-4.8851-1.5152.0741.0741 0 00-.0785.0371c-.211.3753-.4447.8648-.6083 1.2495-1.8447-.2762-3.68-.2762-5.4868 0-.1636-.3933-.4058-.8742-.6177-1.2495a.077.077 0 00-.0785-.037 19.7363 19.7363 0 00-4.8852 1.515.0699.0699 0 00-.0321.0277C.5334 9.0458-.319 13.5799.0992 18.0578a.0824.0824 0 00.0312.0561c2.0528 1.5076 4.0413 2.4228 5.9929 3.0294a.0777.0777 0 00.0842-.0276c.4616-.6304.8731-1.2952 1.226-1.9942a.076.076 0 00-.0416-.1057c-.6528-.2476-1.2743-.5495-1.8722-.8923a.077.077 0 01-.0076-.1277c.1258-.0943.2517-.1923.3718-.2914a.0743.0743 0 01.0776-.0105c3.9278 1.7933 8.18 1.7933 12.0614 0a.0739.0739 0 01.0785.0095c.1202.099.246.1981.3728.2924a.077.077 0 01-.0066.1276 12.2986 12.2986 0 01-1.873.8914.0766.0766 0 00-.0407.1067c.3604.698.7719 1.3628 1.225 1.9932a.076.076 0 00.0842.0286c1.961-.6067 3.9495-1.5219 6.0023-3.0294a.077.077 0 00.0313-.0552c.5004-5.177-.8382-9.6739-3.5485-13.6604a.061.061 0 00-.0312-.0286zM8.02 15.3312c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9555-2.4189 2.157-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.9555 2.4189-2.1569 2.4189zm7.9748 0c-1.1825 0-2.1569-1.0857-2.1569-2.419 0-1.3332.9554-2.4189 2.1569-2.4189 1.2108 0 2.1757 1.0952 2.1568 2.419 0 1.3332-.946 2.4189-2.1568 2.4189Z" />
            </svg>
            <h3 class="font-semibold text-text-primary">Discord</h3>
          </div>
          <p class="text-sm text-text-secondary">Join our community for help and discussions.</p>
        </a>
        
        <a href="/blog" class="group rounded-xl border border-void-light bg-void-gray/50 p-6 hover:border-neon-blue/50 transition-all">
          <div class="flex items-center gap-3 mb-3">
            <svg class="w-6 h-6 text-text-muted group-hover:text-neon-blue transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
            </svg>
            <h3 class="font-semibold text-text-primary">Blog</h3>
          </div>
          <p class="text-sm text-text-secondary">Read tutorials, announcements, and deep dives.</p>
        </a>
      </div>
    </div>
  </section>
</Layout>
