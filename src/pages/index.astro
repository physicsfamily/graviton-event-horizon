---
import WebGpuCanvas from '../components/landing/WebGpuCanvas';
import HeroOverlay from '../components/landing/HeroOverlay';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Graviton - The universal simulation platform. Logic circuits. Fluid dynamics. Artificial life. Powered by Rust + WebGPU." />
    <title>Graviton - Build Universes</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      @import '../styles/global.css';
      
      @keyframes gradient {
        0%, 100% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
      }
      .animate-gradient { animation: gradient 3s ease infinite; }
    </style>
  </head>
  <body class="bg-void-black text-text-primary min-h-screen overflow-x-hidden">
    <!-- WebGPU Background Canvas -->
    <WebGpuCanvas client:only="react" />
    
    <!-- Content Overlay -->
    <main class="relative z-10 min-h-screen flex flex-col items-center justify-center px-4 py-16 text-center">
      <HeroOverlay client:load />
    </main>
  </body>
</html>
