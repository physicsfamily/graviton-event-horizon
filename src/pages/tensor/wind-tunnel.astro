---
import SimulationContainer from '../../components/simulation/SimulationContainer';
import WindTunnel from '../../components/simulation/tensor/WindTunnel';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Virtual Wind Tunnel - Real-time CFD simulation using WebGPU. Visualize fluid dynamics around obstacles." />
    <title>Wind Tunnel | Tensor Dimension | Graviton</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=JetBrains+Mono:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <style>
      @import '../../styles/global.css';
    </style>
  </head>
  <body class="bg-void-black">
    <SimulationContainer
      client:load
      id="sim-tensor-001"
      title="Virtual Wind Tunnel"
      category="TENSOR"
      complexity="HIGH"
      description="Real-time Computational Fluid Dynamics (CFD) simulation using the Lattice Boltzmann Method. Observe vortex shedding, pressure gradients, and velocity fields around obstacles. Powered by WebGPU compute shaders for 60 FPS at high resolution."
    >
      <WindTunnel client:only="react" />
    </SimulationContainer>
  </body>
</html>
