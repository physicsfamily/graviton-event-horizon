---
interface Props {
  title?: string;
  class?: string;
  hover?: boolean;
}

const { title, class: className = '', hover = false } = Astro.props;
---

<div class:list={[
  "rounded-xl border border-void-light bg-void-gray/50 p-6",
  hover && "transition-all duration-300 hover:border-neon-blue/50 hover:shadow-lg hover:shadow-neon-blue/10",
  className
]}>
  {title && (
    <h3 class="text-lg font-semibold text-text-primary mb-4">{title}</h3>
  )}
  <slot />
</div>
